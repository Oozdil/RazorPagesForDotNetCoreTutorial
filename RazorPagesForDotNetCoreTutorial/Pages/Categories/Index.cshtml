@page
@model RazorPagesForDotNetCoreTutorial.Pages.Categories.IndexModel




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;
                Create New Category
            </a>
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Category Name</th>
            <th class="text-center">Display Order</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    @foreach (var obj in @Model.Categories)
    {
        <tr>
            <td class="text-center">@obj.Id</td>
            <td width="50%">@obj.Name</td>
            <td width="25%" class="text-center">@obj.DisplayOrder</td>
            <td width="20%">
                <div class="w-100 btn-group text-center" role="group">
                    <a asp-page="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-page="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill"></i></a>
                </div>
            </td>
        </tr>
    }



</table>